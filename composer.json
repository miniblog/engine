{
    "name": "miniblog/engine",
    "description": "Miniblog is a minimal blogging platform, written in object-oriented PHP, aimed primarily at developers.  There is no complicated setup, no distracting admin area, and no plugins or themes: the focus is blogging.",
    "keywords": [
        "blog",
        "blogging",
        "minimal",
        "markdown",
        "dead simple blog"
    ],
    "type": "library",
    "license": "ISC",
    "authors": [
        {
            "name": "Daniel Bettles",
            "email": "daniel@justathought.dev"
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "csstools/sanitize.css",
                "version": "13.0.0",
                "dist": {
                    "url": "https://github.com/csstools/sanitize.css/archive/refs/tags/v13.0.0.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "php": "^7.4|^8.1.3",
        "danbettles/marigold": "^v2.4.0",
        "erusev/parsedown": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "danbettles/codesniffer-standard": "^2.0",
        "phpstan/phpstan": "^1.8",
        "csstools/sanitize.css": "^13.0.0"
    },
    "autoload": {
        "psr-4": {"Miniblog\\Engine\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"Miniblog\\Engine\\Tests\\": "tests/src/"}
    }
}
