{
    "name": "miniblog/engine",
    "description": "Miniblog is a minimal blogging system, written in object-oriented PHP, aimed primarily at developers.  It is an ongoing experiment in minimal software design: my aim is to create a blogging system that provides only the features that are really needed, only those that bring real value.",
    "type": "library",
    "license": "ISC",
    "authors": [
        {
            "name": "Daniel Bettles",
            "email": "danbettles@yahoo.co.uk"
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "csstools/sanitize.css",
                "version": "13.0.0",
                "dist": {
                    "url": "https://github.com/csstools/sanitize.css/archive/refs/tags/v13.0.0.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "php": "^7.4|^8.1.3",
        "danbettles/marigold": "^v2.0.0",
        "erusev/parsedown": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "danbettles/codesniffer-standard": "^2.0",
        "phpstan/phpstan": "^1.8",
        "csstools/sanitize.css": "^13.0.0"
    },
    "autoload": {
        "psr-4": {"Miniblog\\Engine\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"Miniblog\\Engine\\Tests\\": "tests/src/"}
    },
    "scripts": {
        "app:test": "phpunit --bootstrap=tests/src/.bootstrap.php --colors=always tests",
        "app:lint": "phpcs --standard=phpcs.xml",
        "app:analyse": "phpstan analyse -c phpstan.neon",
        "app:check-quality": [
            "@app:test",
            "@app:lint",
            "@app:analyse"
        ],
        "app:build": [
            "@app:check-quality",
            "bin/console assemble-default-css"
        ]
    },
    "scripts-descriptions": {
        "app:test": "Runs all automated tests.",
        "app:lint": "Lints the PHP.",
        "app:analyse": "Performs static analysis on the PHP.",
        "app:check-quality": "Runs all automated tests; lints all the code; performs static analysis on the PHP.",
        "app:build": "Checks quality and then builds the app, ready for committing."
    }
}
